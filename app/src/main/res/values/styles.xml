<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="MainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!--Стиль для фрагмента настроек, чтобы использовать ActionBar-->
    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_setting</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/margin16dp</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/margin16dp</item>
    </style>

    <style name="CardViewPersonItem" >
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="CardViewPersonItemLinearLayoutPadding">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="CardViewPersonItemEditTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardViewPersonItemImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
