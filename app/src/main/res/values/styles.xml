<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="MainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!--Стиль для фрагмента настроек, чтобы использовать ActionBar-->
    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_setting</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/margin16dp</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/margin16dp</item>
    </style>

    <!--Floating label text style-->
    <style name="CardInputPersonHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Input field style-->
    <style name="CardInputPersonEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardInputPersonErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="CardInputPersonLayoutMarginDefault">
        <item name="android:layout_marginBottom">@dimen/margin8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin16dp</item>
        <item name="android:layout_marginStart">@dimen/margin16dp</item>
        <item name="android:layout_marginTop">@dimen/margin8dp</item>
    </style>
</resources>
